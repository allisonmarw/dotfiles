#!/usr/bin/env sh

# global settings
yabai -m config mouse_follows_focus          off
yabai -m config focus_follows_mouse          off
yabai -m config window_placement             second_child
yabai -m config window_topmost               off
yabai -m config window_opacity               off
yabai -m config window_shadow                on
yabai -m config window_border                off
yabai -m config window_border_width          4
yabai -m config active_window_border_color   0xff775759
yabai -m config normal_window_border_color   0xff505050
# yabai -m config insert_window_border_color   0xffd75f5f
yabai -m config active_window_opacity        1.0
yabai -m config normal_window_opacity        0.90
yabai -m config split_ratio                  0.50
yabai -m config auto_balance                 off
yabai -m config mouse_modifier               fn
yabai -m config mouse_action1                move
yabai -m config mouse_action2                resize

# general space settings
yabai -m config layout                       bsp
yabai -m config top_padding                  20
yabai -m config bottom_padding               20
yabai -m config left_padding                 20
yabai -m config right_padding                20
yabai -m config window_gap                   10



yabai -m signal --add event=space_changed action="bash ~/bin/autodestroy.sh"

yabai -m rule --add title='tmux Dashboard' manage=off
yabai -m rule --add title='Karabiner-Elements Preferences' manage=off
yabai -m rule --add app='System Preferences' manage=off
yabai -m rule --add app='Alfred' manage=off
yabai -m rule --add app='Dash' manage=off
yabai -m rule --add title='iStat Menus' manage=off

CENTER_SCREEN="4:4:1:0:2:2"
CORNER_SCREEN="4:4:0:0:2:2"
FULL_SCREEN="4:4:0:0:4:4"

yabai -m rule --add app="^Dash$" manage=off label="dash_floats" 
yabai -m rule --add app="^DEVONthink 3" grid=${FULL_SCREEN} manage=off label="devonthink" 
yabai -m rule --add title="Dash" grid=${FULL_SCREEN} manage=off label="dash_floats" 
yabai -m rule --add app="System Preferences" grid=${CENTER_SCREEN} manage=off label="sys_pref_floats" 
yabai -m rule --add app="iStat Menus" grid=${FULL_SCREEN} manage=off label="iStatMenus" 
yabai -m rule --add app="Drobo Dashboard" grid=${CENTER_SCREEN} manage=off label="Drobo_no_manage" 
yabai -m rule --add app="Accessibility Inspector" grid=${CORNER_SCREEN} manage=off label="no_mng_accessibility" 
yabai -m rule --add app="App Store" grid=${CORNER_SCREEN} manage=off label="no_mng_appstore" 
yabai -m rule --add app="Alfred" manage=off label="no_mng_alfred" 
yabai -m rule --add title="[pP]reference[s]?" grid=${CENTER_SCREEN} manage=off label="prefs_float" 
yabai -m rule --add title="[Ss]etting[s]?$" manage=off label="vmware_settings_float" 
yabai -m rule --add title="Virtual Machine Library" label="vmware_Lib_float" 

