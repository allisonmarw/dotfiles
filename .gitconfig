[user]
	name = Allison Wampler
	email = allisonmarw@gmail.com
[core]
	excludesfile = ~/.gitignore_global
	editor = nvim
	page = nvim -R
[merge]
	tool = vimdiff
[mergetool]
	prompt = true
[mergetool "vimdiff"]
	cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[difftool]
	prompt = true
[diff]
	tool = vimdiff
[commit]
	template = /Users/awampler/.stCommitMsg
[color]
	pager = no
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
