if command -v nvim &>/dev/null; then
    alias vim=nvim
    alias vi=nvim
elif command -v vim &>/dev/null ; then
    alias vi=vim
fi

if [[ $TERM =~ ^xterm ]]; then
    if command -v lsd &>/dev/null; then
        alias ls=lsd
    elif command -v ls &>/dev/null; then
        alias ls='ls --colors=always'
    fi
fi
