[user]
	name = Allison Wampler
	email = awampler@paloaltonetworks.com
[merge]
    tool = vimdiff
    guitool = vimrdiff
[core]
	excludesfile = /Users/awampler/.gitignore_global
	editor = nvim
	page = less
[mergetool]
	prompt = true
    conflictstyle = diff3
	keepBackup = false
    tool=nvimdiff
[mergetool "fugitive"]
    # Ancestor :1 :2 HEAD :3 merge
    cmd = nvim -f "$MERGED" -c 'Gread :1:% | set scrollbind diff' -c 'Gvsplit :2:% | set scrollbind diff | ALEDisableBuffer'  -c 'Gvsplit :3:% | set scrollbind diff | ALEDisableBuffer' -c 'wincmd w' -c '2wincmd l' 
[mergetool "vimdiff"]
	cmd = vim  -f -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J' -c 'Gvsplit :1:%' -c 'set scrollbind diff' -c '$wincmd w' -c 'wincmd l' -c 'set scrollbind'
[mergetool "nvimdiff"]
	cmd = nvim -f -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J' -c 'Gvsplit :1:%' -c 'set scrollbind diff' -c '$wincmd w' -c 'wincmd l' -c 'set scrollbind'
[mergetool "vimrdiff"]
    cmd = vimr --wait --nvim $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[mergetool "diffconflicts"]
	cmd = diffconflicts vim $BASE $LOCAL $REMOTE $MERGED
[diff]
	tool = nvimdiff
    guitool = vimrdiff
[difftool]
    prompt = false
    conflictstyle = diff3
[difftool "env"]
    cmd = env | vim -
[difftool "vimdiff"] 
	cmd = vim -f -d $LOCAL $REMOTE $MERGED -c 'wincmd w' -c 'wincmd J' -c 'set scrollbind' -c 'wincmd w' -c 'wincmd l' -c 'set scrollbind'
[difftool "nvimdiff"]
	cmd = nvim -f -d $LOCAL $REMOTE $MERGED -c 'wincmd w' -c 'wincmd J' -c 'set scrollbind' -c 'wincmd w' -c 'wincmd l' -c 'set scrollbind'
[difftool "vimrdiff"]
    cmd = vimr --wait --neovim -f -d $LOCAL $REMOTE $MERGED -c 'wincmd w' -c 'wincmd J' -c 'set scrollbind' -c 'wincmd w' -c 'wincmd l' -c 'set scrollbind'
[difftool "diffconflicts"]
	cmd = diffconflicts vim $LOCAL $REMOTE $MERGED
[color]
	pager = yes
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[alias]
    sl = !git smartlog
    smartlog = log --graph --pretty=format:'commit: %C(bold red)%h%Creset %C(red)<%H>%Creset %C(bold magenta)%d %Creset%ndate: %C(bold yellow)%cd %Creset%C(yellow)%cr%Creset%nauthor: %C(bold blue)%an%Creset %C(blue)<%ae>%Creset%n%C(cyan)%s%n%Creset'
    local-branches = !git branch -vv | cut -c 3- | awk '$3 !~/\\[/ { print $1 }'
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[commit]
	template = /Users/awampler/.stCommitMsg
[push]
	default = matching
