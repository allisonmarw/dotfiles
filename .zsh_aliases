#!/usr/bin/env zsh

export ZSH_ALIASES_LOADED

if (( $+command[nvim] )); then
    alias vim=nvim
    alias vi=nvim
elif (( $+command[vim] )); then
    alias vi=vim
fi

if (( $+command[vimr] )); then
    echo 'vimr not installed' >&2
    return 1
elif [[ ${DISTRO} == "darwin" ]]; then
    alias vimr='vimr --cur-env --nvim'
    alias vim='vimr'
fi

function ls () {
    if [[ $TERM =~ ^xterm ]]; then
        if command -v lsd &>/dev/null; then
            alias ls=lsd
        elif command -v ls &>/dev/null; then
            alias ls='ls --color=always'
        fi
    fi
    unset -f ls
    ls
}


function ipython_bootstrap () {
    python -c 'import IPython; IPython.embed(colors="Linux")'
}
function ipython3_bootstrap () {
    python3 -c 'import IPython; IPython.embed(colors="Linux")'
}

alias clear='/usr/bin/yes "$(printf '\''-\n\n\n'\'')" | /usr/bin/head -n $(( $(tput lines) * 31 / 16 ))'
(( $+command[python] )) && alias ipy="python -c 'import IPython; IPython.terminal.ipapp.launch_new_instance()'"
(( $+command[python3] )) && alias ipy3="python3 -c 'import IPython; IPython.terminal.ipapp.launch_new_instance()'"
alias shutup='stty tostop'
